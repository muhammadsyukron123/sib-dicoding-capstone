<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.AboutFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileSyukron"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="244dp"
        android:src="@drawable/syukron"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSyukron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/name_syukron"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/profileSyukron"
        app:layout_constraintStart_toEndOf="@+id/profileSyukron"
        app:layout_constraintTop_toTopOf="@+id/profileSyukron" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileDzikri"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="244dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/dzikri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileSyukron" />

    <TextView
        android:id="@+id/tvDzikri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/name_dzikri"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/profileDzikri"
        app:layout_constraintEnd_toStartOf="@+id/profileDzikri"
        app:layout_constraintTop_toTopOf="@+id/profileDzikri" />


</androidx.constraintlayout.widget.ConstraintLayout>